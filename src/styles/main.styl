@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

.me
  background-image url(../images/me.png)
  background-size contain
  width 4em
  height 4em
  border-radius 2em

.riker-grin
  background-image url(../images/riker-grin.jpg)

.picard-wtf
  background-image url(../images/picard-wtf.jpg)

.cowboy-coding
  background-image url(../images/cowboy-coding.jpg)

.light-bg
  background-color white
  color #333 !important
  code[class*="language-"], pre[class*="language-"]
    color #333 !important
    .token.operator
    .token.punctuation
      color #555 !important
  &.bespoke-backdrop-active
    opacity 1

.pin
  position absolute
  left 0
  right 0
  &.top
    top 10%
  &.bottom
    bottom 10%

.italic
  font-style: italic;
  text-transform: none;
  font-family: didot,times new roman,serif;

.tiny-code
  code[class*="language-"], pre[class*="language-"]
    font-size 0.8em
    line-height 1
